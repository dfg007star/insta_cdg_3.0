<div class="row">
  <div class="container mt-100 mb-100">
    <div class="h2">Sing in 📝</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <hr>
      <div class="form" style="display: flex; align-items: flex-end;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email", style:" resize: none; width: 25%"%></div>



      <div class="form" style="display: flex; align-items: flex-end;">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password", style:" resize: none; width: 25%" %></div>

      <div><% if devise_mapping.rememberable? %>
       <%= f.check_box :remember_me, class:"form-check-input" %>
       <%= f.label :remember_me %>
       <% end %></div>

    <%= f.submit "Sign in",class: 'btn-c' %>

<% end %>

<%= render "devise/shared/links" %>

</div>
</div>