<div class='container mt-100 mb-100'>
<div class="row">

    <div class="col col-md-8">
        <%= link_to '<< Back', @post.user , class: "btn-primary btn-sm mr-10"%>
        <% if @post.user_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(@post), class:"btn-primary btn-sm mr-10" %>
          <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-danger btn-sm mr-10" %>
        <% end %>
    <p id="notice"><%= notice %></p>
    <div class="h4" style="aling-items: center; display: flex; margin-top: 20px; margin-bottom: 0;">
    <svg style="margin-right:5px;"width="1.1em" height="1.1em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="rgba(0, 0, 0, 0.7)" xmlns="http://www.w3.org/2000/svg">
      <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
      <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
      <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
    </svg>
    <%= link_to @post.user.name, @post.user%>
    </div>
      <% if @post.image.present?%>
        <img class="post-image mt-15" src="<%= @post.image_url %>" />
      <% end %>
</div> 

    <div class="col col-md-4 post-info">
    <div class="h4" style="margin-bottom:5px; margin-top: 68px;"><small>Descirption:</small></div>
    <div class="m-0 h3"><%= @post.description%></div>
        <%= render "comments/comment"%>
    </div>


</div>
</div>