        <%= form.text_area :description , class:"form-control", placeholder:"Your description..", style:" resize: none; width: 50%"%>
        <div class="form"><small class="text-muted"><em>Only 140 characters</em></small></div>

        <%= form.submit "Upload", class: 'btn-c form' %>
<% end %>
      <%= link_to 'Back', current_user, class: "btn-c btn-form" %>
    </div>
  </div>
</div>
