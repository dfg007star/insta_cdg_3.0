<%# User posts %>
  <% if @user.posts.any? %>
  <div class='container'>
    <div class="row mb-100">
        <% @user.posts.each do |post| %>
        <div class="col-sm-3 card card-user-feed">
            <% if post.image.present?%>
            <div class="card-image-wrapper">
              <%= link_to image_tag(post.image_url), post, class: "card-image"%>
            <% end %>
            <div class="card-image-likes">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart-fill" fill="rgba(0, 0, 0, 0.4)" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
              </svg> <div class="text-muted card-image-num"><em>0</em></div>
              </div>
 <div class="card-image-comment">
<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chat-text-fill" fill="rgba(0, 0, 0, 0.4)" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7zM4.5 5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zm0 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4z"/>
</svg><div class="text-muted card-image-num"><em><%= post.comments.count %></em></div>
</div>
            <p class="mt-5 text-muted" style="text-align: right; display: inline; float: right; margin-bottom: 6px;"><small>Posted <%= time_ago_in_words(post.created_at) %> ago</small></p>
              </div>
              </div>
            <% end %>
        </div>
    </div>
  <% end %>
